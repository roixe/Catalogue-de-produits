@page
@model Catalogue_de_produits.Pages.Produits.DetailsModel

@{
    ViewData["Title"] = "Details";
}
<style>
h4 {
    font-size: 1.8rem;
    color: #555;
    margin-bottom: 20px;
    font-weight: bold;
    text-align: center;
    color: #27ae60;
}

.dl {
    width: 100%;
}

dl.row {
    display: flex;
    flex-wrap: wrap;
    margin: 20px 0;
}

dt {
    font-weight: bold;
    color: #333;
    padding: 10px 0;
}

dd {
    padding: 10px 0;
    color: #666;
}

dt.col-sm-2 {
    font-size: 1rem;
    margin-bottom: 10px;
}

dd.col-sm-10 {
    font-size: 1.1rem;
    margin-bottom: 15px;
}

dt.col-sm-10 {
        text-align:right;
        position: absolute;

}

img {
    max-width: 100%;
    max-height: 300px;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    margin-top: 10px;
}
</style>

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Produit.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Stock)
        </dd>
        <dt class="col-sm-10">
            <img src="@Url.Content(Model.Produit.ImageUrl)" alt="Image" />

        </dt>
    </dl>
</div>
<div>
    @if (Model.IsAdmin)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Produit.Id">Edit</a>
    }
    <a asp-page="./Index">Back to List</a>
</div>
