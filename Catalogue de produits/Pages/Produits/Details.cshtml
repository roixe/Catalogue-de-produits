@page
@model Catalogue_de_produits.Pages.Produits.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Produit.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Produit.Stock)
        </dd>
        <dt class="col-sm-10">
            <img src="@Url.Content(Model.Produit.ImageUrl)" alt="Image" />

        </dt>
    </dl>
</div>
<div>
    @if (Model.IsAdmin)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Produit.Id">Edit</a>
    }
    <a asp-page="./Index">Back to List</a>
</div>
